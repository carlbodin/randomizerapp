<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".DiceDynamicActivity">

    <TextView
        android:id="@+id/yatzyRollResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="45sp"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toTopOf="@+id/yatzyLinearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/yatzyRollButton"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:background="@drawable/button_selector"
        android:onClick="roll"
        android:text="@string/rollButtonText"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yatzyLinearLayout2" />

    <LinearLayout
        android:id="@+id/yatzyLinearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="255dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/yatzyImageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.8"
            android:scaleY="0.8" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>